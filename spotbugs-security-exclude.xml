<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude test files from analysis -->
    <Match>
        <Class name="~.*Test.*"/>
    </Match>
    <!-- not sure if its a big deal here, so disable it for less garbage in output -->
    <Match>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>
    <!-- Don't care if we have predictable random -->
    <Match>
        <Bug pattern="PREDICTABLE_RANDOM"/>
    </Match>
        <!-- Suppress informational finding about Spring endpoints -->
    <Match>
        <Bug pattern="SPRING_ENDPOINT"/>
    </Match>

    <Match>
        <Bug pattern="IMPROPER_UNICODE"/>
    </Match>
    <!-- it's JPA class so we don't really care -->
    <Match>
        <Class name="com.lolmaxlevel.oneclone_backend.model.File"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
    <!-- not relevant cuz we get files by id, not by path from user -->
    <Match>
        <Class name="com.lolmaxlevel.oneclone_backend.repository.FileSystemRepositoryImpl"/>
        <Bug pattern="PATH_TRAVERSAL_IN"/>
    </Match>
        <!-- not relevant cuz we get files by id, not by path from user -->
    <Match>
        <Class name="com.lolmaxlevel.oneclone_backend.service.FileLocationService"/>
        <Bug pattern="PATH_TRAVERSAL_IN"/>
    </Match>
        <!-- not relevant cuz we get files by id, not by path from user -->
    <Match>
        <Class name="com.lolmaxlevel.oneclone_backend.service.PoiTlDocumentGenerator"/>
        <Bug pattern="PATH_TRAVERSAL_IN"/>
    </Match>
        <!-- because we are using DI this error is not really relevant -->
    <Match>
        <Class name="com.lolmaxlevel.oneclone_backend.service.FileLocationService"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
</FindBugsFilter>

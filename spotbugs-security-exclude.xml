<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude test files from analysis -->
    <Match>
        <Class name="~.*Test.*"/>
    </Match>

    <!-- Exclude generated files -->
    <Match>
        <Class name="~.*\$.*"/>
    </Match>

    <!-- Exclude Spring Boot generated classes -->
    <Match>
        <Class name="~.*Application"/>
        <Bug pattern="DM_EXIT"/>
    </Match>

    <!-- Exclude Spring Entity Leak issues (problematic detector) -->
    <Match>
        <Bug pattern="SPRING_ENTITY_LEAK"/>
    </Match>

    <!-- Exclude issues related to synthetic methods and lambda expressions -->
    <Match>
        <Method name="~lambda\$.*"/>
    </Match>

    <!-- Exclude Lombok generated methods -->
    <Match>
        <Method name="~(equals|hashCode|toString|canEqual)"/>
        <Bug pattern="EQ_UNUSUAL"/>
    </Match>

    <!-- Exclude specific Spring/JPA related false positives -->
    <Match>
        <Class name="~.*Controller"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>

    <Match>
        <Class name="~.*Entity"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>

    <!-- Exclude configuration classes -->
    <Match>
        <Class name="~.*Config.*"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>

    <!-- Exclude DTO classes from certain checks -->
    <Match>
        <Class name="~.*Dto"/>
        <Bug pattern="URF_UNREAD_FIELD"/>
    </Match>
</FindBugsFilter>
